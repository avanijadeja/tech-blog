{{! Edit particular post }}
<div class="card">
  <h2 class="card-header">Edit Post</h2>
  {{! editPost form }}
  <form class="card-body" id="editPostForm">
    <div>
      <label class="FormUserName">Title</label>
      {{! postTitle from post model  }}
      <input
        class="formInputvalues"
        type="text"
        name="postTitle"
        value="{{post.postTitle}}"
      />
    </div>
    {{! postContent from post model }}
    <div>
      <label class="FormUserName">Content</label>
      <textarea
        class="formTextarea formInputvalues"
        name="post-body"
        data-number="8"
      >{{post.postContent}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">Update Post</button>
    <input type="hidden" name="postId" value="{{post.id}}" />
  </form>
  <div class="card-body">
    <button class="btn btn-primary" type="click" id="delete-btn">Delete</button>
  </div>
</div>
{{! link to edit.js file }}
<script src="/js/edit.js"></script>