{{! to display all posts with user name and date }}
<div class="card">
  <div class="card-header flex-row justify-space-between">
    <h2>
      <a href="/post/{{id}}">
        {{!  print postTitle from Post model }}
        <div class="col-9">{{postTitle}}</div>
      </a>
    </h2>
    <div class="col-3">posted by
      {{! print userName from User model }}
      {{user.userName}}
      on
      {{! dateCreated change using format_date in helper.js file and then print }}
      {{format_date dateCreated}}
    </div>
  </div>
  <p class="card-body">
    {{! print postContent from Post model }}
    {{postContent}}
  </p>
</div>